{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "pkg", "dist"]
}